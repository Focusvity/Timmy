<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{dd-MM-yyyy HH:mm:ss.SSS}] %boldCyan(%thread) %boldGreen(%logger{0}) %highlight(%level): %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>